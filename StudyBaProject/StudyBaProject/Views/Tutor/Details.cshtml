@model StudyBa.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<h1>@Model.Username's Profile</h1>

<div class="row">
    <div class="col-md-3">
        <img src="~/images/@(Model.Avatar).jpg" alt="Profile Picture" class="img-thumbnail" />
    </div>
    <div class="col-md-9">
        <dl class="dl-horizontal">
            <dt>
                Username
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>
            <dt>
                First Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                Last Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                Date of Birth
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateOfBirth.Date.Year)
            </dd>
            <dt>
                Email
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Contact Number
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>
            
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
