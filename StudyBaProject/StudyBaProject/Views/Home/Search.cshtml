@model IEnumerable<StudyBa.Models.User>

@{
    ViewData["Title"] = "Search Tutors";
}

<div class="container mt-5">
    <h1>Search Tutors</h1>
    <form asp-action="Search" method="post" class="mt-4">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
            <div class="input-group-append">
                <button type="submit" class="btn btn-warning">Search</button>
            </div>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-4">@ViewBag.Message</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tutor in Model)
                {
                    <tr>
                        <td>@tutor.Username</td>
                        <td>@tutor.FirstName</td>
                        <td>@tutor.LastName</td>
                        <td>@tutor.Email</td>
                        <td>@tutor.ContactNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .container {
        padding: 20px;
    }

    .form-control {
        border-radius: 0;
    }

    .btn-warning {
        border-color: #ffc107;
        background-color: #ffc107;
    }

        .btn-warning:hover {
            border-color: #e0a800;
            background-color: #e0a800;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }
</style>
